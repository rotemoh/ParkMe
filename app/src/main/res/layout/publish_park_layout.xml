<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/publish_header_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Publish Me!"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/parking_add_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parking address:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/publish_header_txt"
            android:layout_alignLeft="@+id/when_to_rent_txt"
            android:layout_alignStart="@+id/when_to_rent_txt"
            android:layout_marginTop="30dp" />

        <EditText
            android:id="@+id/address_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/parking_add_txt"
            android:layout_toEndOf="@+id/parking_add_txt"
            android:layout_toRightOf="@+id/parking_add_txt"
            android:ems="10"
            android:inputType="textPostalAddress" />

        <TextView
            android:id="@+id/when_to_rent_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When to rent it?"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/cost_txt"
            android:layout_toLeftOf="@+id/publish_header_txt"
            android:layout_toStartOf="@+id/publish_header_txt"
            android:layout_marginTop="28dp" />

        <TextView
            android:id="@+id/cost_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cost per hour:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/parking_add_txt"
            android:layout_alignLeft="@+id/when_to_rent_txt"
            android:layout_alignStart="@+id/when_to_rent_txt"
            android:layout_marginTop="29dp" />


        <EditText
            android:id="@+id/comments_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="comments: "
            android:layout_below="@+id/untilDatePicker"
            android:layout_alignRight="@+id/cost_picker"
            android:layout_alignEnd="@+id/cost_picker" />

        <CheckBox
            android:id="@+id/approve_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="I approve that the parking is in my property"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/comments_input"
            android:layout_alignLeft="@+id/save_details_check"
            android:layout_alignStart="@+id/save_details_check" />

        <NumberPicker
            android:id="@+id/cost_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cost_txt"
            android:layout_alignTop="@+id/cost_txt"
            android:layout_centerHorizontal="true" />

        <!--<ImageButton-->
        <!--android:id="@+id/paypal_btn"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/comments_input"-->
        <!--android:layout_toEndOf="@+id/cost_txt"-->
        <!--android:layout_toRightOf="@+id/cost_txt"-->
        <!--android:src="C:/Users/rotemoh/Desktop/AndroidStudioProjects/ParkMe/app/src/main/res/drawable/paypalLogo.png" />-->

        <CheckBox
            android:id="@+id/save_details_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Save details for next time"
            android:layout_below="@+id/approve_check"
            android:layout_alignLeft="@+id/comments_input"
            android:layout_alignStart="@+id/comments_input" />

        <Button
            android:id="@+id/update_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/cost_picker"
            android:layout_toStartOf="@+id/cost_picker" />

        <Button
            android:id="@+id/reset_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/save_details_check"
            android:layout_toRightOf="@+id/comments_input"
            android:layout_toEndOf="@+id/comments_input" />

        <EditText
            android:id="@+id/start_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/update_btn"
            android:layout_alignStart="@+id/update_btn"
            android:layout_below="@+id/when_to_rent_txt"
            android:layout_marginTop="81dp"
            android:text="start" />

        <EditText
            android:id="@+id/end_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/update_btn"
            android:layout_alignStart="@+id/update_btn"
            android:layout_alignTop="@+id/untilDatePicker"
            android:layout_marginTop="70dp"
            android:text="end" />

        <DatePicker
            android:id="@+id/fromDatePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/when_to_rent_txt"
            android:layout_toEndOf="@+id/when_to_rent_txt"
            android:layout_toRightOf="@+id/when_to_rent_txt"
            android:calendarViewShown="false"
            android:datePickerMode="spinner" />

        <DatePicker
            android:id="@+id/untilDatePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/fromDatePicker"
            android:layout_alignStart="@+id/fromDatePicker"
            android:layout_below="@+id/fromDatePicker"
            android:calendarViewShown="false"
            android:datePickerMode="spinner" />

    </RelativeLayout>
    </LinearLayout>
</ScrollView>