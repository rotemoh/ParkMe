<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/parking_add_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parking address:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/address_input"
            android:layout_alignStart="@+id/address_input" />

        <EditText
            android:id="@+id/address_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPostalAddress"
            android:layout_alignLeft="@+id/cost_txt"
            android:layout_alignStart="@+id/cost_txt"
            android:layout_below="@+id/parking_add_txt"
            android:layout_alignRight="@+id/publish_start_date_input"
            android:layout_alignEnd="@+id/publish_start_date_input" />

        <TextView
            android:id="@+id/when_to_rent_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When to rent it?"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_below="@+id/cost_picker"
            android:layout_alignLeft="@+id/comments_input"
            android:layout_alignStart="@+id/comments_input" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="start"
            android:id="@+id/start"
            android:layout_above="@+id/textView3"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/publish_start_date_input"
            android:hint="dd/mm/yyyy"
            android:layout_marginTop="19dp"
            android:layout_below="@+id/cost_input"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="end"
            android:id="@+id/textView3"
            android:layout_marginRight="21dp"
            android:layout_marginEnd="21dp"
            android:layout_below="@+id/publish_start_date_input"
            android:layout_toLeftOf="@+id/publish_end_date_input"
            android:layout_toStartOf="@+id/publish_end_date_input"
            android:layout_marginTop="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/publish_end_date_input"
            android:hint="dd/mm/yyyy"
            android:numeric="integer"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignLeft="@+id/publish_start_date_input"
            android:layout_alignStart="@+id/publish_start_date_input" />
        <TextView
            android:id="@+id/cost_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cost per hour:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_below="@+id/address_input"
            android:layout_alignLeft="@+id/start"
            android:layout_alignStart="@+id/start"
            android:layout_marginTop="19dp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/cost_input"
            android:layout_alignBottom="@+id/cost_txt"
            android:layout_toRightOf="@+id/cost_txt"
            android:layout_alignRight="@+id/reset_btn"
            android:layout_alignEnd="@+id/reset_btn" />

        <EditText
            android:id="@+id/comments_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="comments: "
            android:layout_below="@+id/publish_end_date_input"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginTop="25dp" />

        <CheckBox
            android:id="@+id/approve_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="I approve that the parking is in my property"
            android:layout_marginTop="22dp"
            android:layout_below="@+id/comments_input"
            android:layout_alignLeft="@+id/comments_input"
            android:layout_alignStart="@+id/comments_input" />

        <Button
            android:id="@+id/update_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:theme="@style/Button.Tinted"
            android:layout_alignTop="@+id/reset_btn"
            android:layout_toRightOf="@+id/start"
            android:layout_toEndOf="@+id/start" />

        <Button
            android:id="@+id/reset_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:theme="@style/Button.Tinted"
            android:layout_below="@+id/approve_check"
            android:layout_toRightOf="@+id/parking_add_txt"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shekel2"
            android:layout_above="@+id/publish_start_date_input"
            android:layout_alignTop="@+id/cost_txt"
            android:layout_alignRight="@+id/publish_start_date_input"
            android:layout_alignEnd="@+id/publish_start_date_input"
            android:layout_toEndOf="@+id/cost_input"
            android:layout_toRightOf="@+id/cost_input" />


    </RelativeLayout>

    </LinearLayout>
</ScrollView>