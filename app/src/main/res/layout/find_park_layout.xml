<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/where_to_search_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Where to search?"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="49dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/by_address_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/where_to_search_txt"
            android:layout_alignStart="@+id/where_to_search_txt"
            android:layout_below="@+id/where_to_search_txt"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:ems="10"
            android:inputType="textPostalAddress"
            android:hint="By address " />

        <EditText
            android:id="@+id/by_central_location_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/by_address_input"
            android:layout_alignStart="@+id/by_address_input"
            android:layout_below="@+id/by_address_input"
            android:ems="10"
            android:inputType="textPostalAddress"
            android:hint="By central location" />

        <TextView
            android:id="@+id/when_to_rent_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When to rent it?"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="38dp"
            android:layout_below="@+id/by_central_location_input"
            android:layout_alignLeft="@+id/where_to_search_txt"
            android:layout_alignStart="@+id/where_to_search_txt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_txt"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="start"
            android:layout_above="@+id/find_end_date_input"
            android:layout_toLeftOf="@+id/find_start_date_input"
            android:layout_toStartOf="@+id/find_start_date_input" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="continue"
            android:id="@+id/continue_btn"
            android:theme="@style/Button.Tinted"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/find_end_date_input"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/find_start_date_input"
            android:hint="dd/mm/yyyy"
            android:layout_below="@+id/when_to_rent_txt"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/end_date"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="end"
            android:layout_alignBottom="@+id/find_end_date_input"
            android:layout_alignLeft="@+id/start_txt"
            android:layout_alignStart="@+id/start_txt" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/find_end_date_input"
            android:hint="dd/mm/yyyy"
            android:layout_below="@+id/find_start_date_input"
            android:layout_alignLeft="@+id/find_start_date_input"
            android:layout_alignStart="@+id/find_start_date_input" />

    </RelativeLayout>
</ScrollView>