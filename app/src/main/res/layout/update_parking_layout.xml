<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/update_parking">

        <TextView
            android:id="@+id/parking_add_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parking address:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/address_input"
            android:layout_alignStart="@+id/address_input" />

        <EditText
            android:id="@+id/address_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPostalAddress"
            android:layout_below="@+id/parking_add_txt"
            android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/cost_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cost per hour:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/address_input"
        android:layout_alignLeft="@+id/address_input"
        android:layout_alignStart="@+id/address_input" />

    <NumberPicker
        android:id="@+id/cost_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cost_txt"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/reset_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:theme="@style/Button.Tinted"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/cost_picker"
        android:layout_centerHorizontal="true" />

</RelativeLayout>